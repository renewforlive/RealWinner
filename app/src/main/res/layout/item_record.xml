<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_record_post"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="3:2" />

    <TextView
        android:id="@+id/item_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/dark_gray"
        android:text="@string/item_record_title"
        app:layout_constraintTop_toBottomOf="@id/item_record_post"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_record_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/medium_gray"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/item_record_title"
        app:layout_constraintStart_toEndOf="@id/item_record_title" />

    <TextView
        android:id="@+id/item_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:text="@string/item_record_time"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/item_record_title_content"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_record_time_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/medium_gray"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/item_record_time"
        app:layout_constraintStart_toEndOf="@id/item_record_time" />

    <TextView
        android:id="@+id/item_record_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:text="@string/item_record_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/item_record_time_content"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_record_content_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/medium_gray"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/item_record_content"
        app:layout_constraintStart_toEndOf="@id/item_record_content" />

</androidx.constraintlayout.widget.ConstraintLayout>